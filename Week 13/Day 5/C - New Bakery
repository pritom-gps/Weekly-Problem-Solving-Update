#include <bits/stdc++.h>
#define ll long long
using namespace std;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(NULL);

    int tst;
    cin >> tst;
    while (tst--)
    {
        ll n, a, b;
        cin >> n >> a >> b;
        if (a >= b)
            cout << n * a << '\n';
        else
        {
            ll c = b - n + 1;
            if (c >= a)
            {
                ll val = (n * (n - 1)) / 2;
                cout << (c * n) + val << '\n';
            }
            else
            {
                ll d = b - a + 1;
                ll val = (d * (d - 1)) / 2;
                cout << (n * a) + val << '\n';
            }
        }
    }
    return 0;
}
